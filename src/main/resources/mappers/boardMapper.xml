<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
 "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.markepost.board.mapper.BoardMapper">
	<select id="selectBoardByName" 
	parameterType="string" 
	resultType="com.markepost.board.domain.Board">
		SELECT
			`id`
			, `name`
			, `introduce`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`board`
		WHERE
			`name` = #{name}
	</select>
	<select id="selectBoardById" 
	parameterType="int" 
	resultType="com.markepost.board.domain.Board">
		SELECT
			`id`
			, `name`
			, `introduce`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`board`
		WHERE
			`id` = #{boardId}
	</select>
	<insert id="insertBoard" 
	parameterType="com.markepost.board.domain.Board" 
	useGeneratedKeys="true" 
	keyProperty="id" 
	keyColumn="id">
		INSERT INTO `board`
		(
			`name`
			, `introduce`
			<if test="imagePath != null">
			, `imagePath`
			</if>
			, `createdAt`
			, `updatedAt`
		)
		VALUES
		(
			#{name}
			, #{introduce}
			<if test="imagePath != null">
			, #{imagePath}
			</if>
			, NOW()
			, NOW()
		)
	</insert>
	<select id="selectBoardList" 
	parameterType="map" 
	resultType="com.markepost.board.domain.Board">
		SELECT
			`id`
			, `name`
			, `introduce`
			, `imagePath`
			, `createdAt`
			, `updatedAt`
		FROM
			`board`
		WHERE
			`name` LIKE '%${name}%'
		LIMIT #{pageSize}
		OFFSET #{offset}
	</select>
	<select id="countBoards" 
	parameterType = "string"
	resultType="int">
		SELECT
			COUNT(*)
		FROM
			`board`
		WHERE
			`name` LIKE '%${name}%'
	</select>
	<update id="updateBoardByPostId" 
	parameterType="map">
		UPDATE `board`
		SET
			`introduce` = #{introduce}
			<if test="imagePath != null">
			, `imagePath` = #{imagePath}
			</if>
			, `updatedAt` = NOW()
		WHERE
			`id` = #{boardId}
	</update>
</mapper>